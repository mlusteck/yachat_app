<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Room</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>
        <td><%= message.room %></td>
        <td><%= message.user %></td>
        <td><%= link_to 'Show', room_message_path(message.room,message) %></td>
        <td><%= link_to 'Edit', edit_room_message_path(message.room,message) %></td>
        <td><%= link_to 'Destroy', room_message_path(message.room,message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
